<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="300.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="300.0" prefWidth="301.0">
          <Label fx:id="taskTitleLabel" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Task Title" />
          <VBox alignment="CENTER_LEFT" prefHeight="218.0" prefWidth="301.0" spacing="20">
              <HBox spacing="10">
                  <Label style="-fx-font-weight: bold;" text="Description:" />
                  <Label fx:id="taskDescriptionLabel" />
              </HBox>
              <HBox spacing="10">
                  <Label style="-fx-font-weight: bold;" text="Posted By:" />
                  <Label fx:id="taskPosterLabel" />
              </HBox>
              <HBox spacing="10">
                  <Label style="-fx-font-weight: bold;" text="State:" />
                  <Label fx:id="taskSolverLabel" />
              </HBox>
              <HBox spacing="10">
                  <Label style="-fx-font-weight: bold;" text="Date Posted:" />
                  <Label fx:id="taskDatePostedLabel" />
              </HBox>
              <HBox spacing="10">
                  <Label style="-fx-font-weight: bold;" text="Length:" />
                  <Label fx:id="taskLengthLabel" />
              </HBox>
          </VBox>
         <Separator prefHeight="15.0" prefWidth="139.0" />
          <HBox alignment="CENTER" spacing="20">
              <Button onAction="#handleBackButtonClicked" text="Back" />
            <Button mnemonicParsing="false" text="Solve task" />
          </HBox>
      </VBox>
   </children>
</AnchorPane>
